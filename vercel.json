{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "pages/api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "GENERATE_SOURCEMAP": "false"
    }
  }
} 